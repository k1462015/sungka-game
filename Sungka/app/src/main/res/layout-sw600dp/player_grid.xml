<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    app:columnCount="2">

    <android.support.v7.widget.Space
        android:layout_height="16dp"
        app:layout_columnSpan="2"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

    <TextView
        android:id="@+id/player_name_label"
        android:layout_marginBottom="@dimen/player_statistics_vertical_padding"
        android:layout_marginTop="@dimen/player_statistics_vertical_padding"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="#727272"
        android:textSize="24sp"
        app:layout_columnSpan="2"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal" />

    <android.support.v7.widget.Space
        android:layout_height="16dp"
        app:layout_columnSpan="2"
        app:layout_columnWeight="1"
        app:layout_rowWeight="0.5" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/scores_recycler_view"
        android:layout_height="16dp"
        app:layout_columnSpan="2"
        app:layout_columnWeight="1"
        app:layout_rowWeight="@dimen/match_item_row_weight" />

</android.support.v7.widget.GridLayout>

