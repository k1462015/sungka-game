<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.25">

         <ImageView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:src="@android:drawable/btn_star"
             android:id="@+id/iv_star"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iv_star"
            android:layout_alignTop="@+id/iv_star"
            android:layout_alignRight="@+id/iv_star"
            android:layout_alignBottom="@+id/iv_star"
            android:layout_margin="1dp"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/list_item_position"/>

    </RelativeLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_weight="0.5"
        android:id="@+id/list_item_player" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="0.25"
        android:id="@+id/list_item_scores" />

</LinearLayout>